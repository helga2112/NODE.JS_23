{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.+(ts|js)", "**/?(*.)+(spec|test).+(ts|js)"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": ["src/**/*.{ts,js}"],
  "coverageThreshold": {
    "global": {
      "lines": 90
    }
  }
  }